# Cache static assets for 1 year
/_next/static/*
  Cache-Control: public, max-age=31536000, immutable

# Cache media files for 1 year  
/_next/media/*
  Cache-Control: public, max-age=31536000, immutable

# Cache chunks for 1 year
/_next/chunks/*
  Cache-Control: public, max-age=31536000, immutable

